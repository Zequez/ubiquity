{
  "name": "@ubiquity/dollar-ui",
  "license": "MIT",
  "scripts": {
    "start": "run-s _cdroot solidity:build next:build next:start",
    "dev": "run-s _cdroot solidity:build next:dev",
    "_cdroot": "./build-scripts/cd-to-project-root.sh",
    "build": "run-s solidity:build next:build",
    "solidity:build": "./build-scripts/compile-artifacts.sh",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:eslint": "eslint . --ext .ts,.tsx --cache --fix --plugin tsc --rule 'tsc/config: [2, {configFile: \"./tsconfig.json\"}]'",
    "css:build": "tailwindcss -o pages/styles/tailwind.css",
    "css:watch": "tailwindcss -o pages/styles/tailwind.css --watch",
    "next:dev": "next dev",
    "next:build": "next build",
    "next:start": "next start",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix --plugin tsc --rule 'tsc/config: [2, {configFile: \"./tsconfig.json\"}]'"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*/cache/",
      "**/*/artifacts/",
      "**/*/node_modules/**/*"
    ],
    "events": {
      "config": "",
      "exit": "",
      "crash": "stop",
      "restart": "clear && printf '\\033[3J'",
      "start": "clear && printf '\\033[3J'"
    }
  },
  "devDependencies": {},
  "dependencies": {
    "@primitivefi/hardhat-dodoc": "^0.1.1",
    "@tippyjs/react": "^4.2.5",
    "@types/node": "^16.7.10",
    "@types/react": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "autoprefixer": "^10.0.2",
    "eslint": "^7.16.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-tsc": "^2.0.0",
    "ethers": "^5.0.31",
    "husky": "^7.0.1",
    "lint-staged": ">=10",
    "next": "^11.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.14",
    "prettier": "2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropdown-now": "^6.0.1",
    "tailwindcss": "^2.2.9",
    "typescript": "^4.3.2"
  }
}
